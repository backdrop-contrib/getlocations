function getlocations_fields_data_keys($type = 'dd') {

  // check what3words
  $w3w_s = getlocations_w3w_settings();

  $what3words_lic = $w3w_s['what3words_lic'];
  $what3words_enable = $w3w_s['what3words_group']['what3words_enable'];

  if ($type == 'dd') {
    // for dropdowns
    $keys = array(
      'phone'               => t('Phone'),
      'mobile'              => t('Mobile'),
      'fax'                 => t('Fax'),
      'sv_heading'          => t('Heading'),
      'sv_zoom'             => t('Zoom'),
      'sv_pitch'            => t('Pitch'),
      'mapzoom'             => t('Map zoom'),
      'map_maptype'         => t('Map type'),
      'sv_enable'           => t('Streetview Enable'),
      'sv_showfirst'        => t('Showfirst Enable'),
    );
    if ($what3words_enable && $what3words_lic['key'] ) {
      $keys['what3words'] = t('what3words');
    }
  }
  elseif ($type == 'd') {
    // default values
    $keys = array(
      'phone'               => '',
      'mobile'              => '',
      'fax'                 => '',
      'sv_heading'          => 0,
      'sv_zoom'             => 1,
      'sv_pitch'            => 0,
      'mapzoom'             => 12,
      'map_maptype'         => 'Map',
      'map_settings_allow'  => 0,
      'sv_enable'           => 0,
      'sv_showfirst'        => 0,
    );
    if ($what3words_enable) {
      $keys['what3words'] = 1;
    }
    $keys += getlocations_fields_get_display_settings_defaults();
  }
  return $keys;
}

